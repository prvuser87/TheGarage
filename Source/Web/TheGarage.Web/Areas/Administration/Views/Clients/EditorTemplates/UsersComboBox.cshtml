@(Html.Kendo()
    .ComboBoxFor(m => m)
    .Name("UserId")
    .DataTextField("Name")
    .DataValueField("Id")
    .Filter(FilterType.Contains)
    .MinLength(1)
    .Placeholder("Choose_user")
    .Value("Choose_user")
    .DataSource(data =>
    {
        data.ServerFiltering(true)
            .Read(read =>
            {
                read.Action("Users", "Clients")
                    .Data(@<text> function () { return { text: $('\\#UserId').data("kendoComboBox").input.val() };} </text>);
            });
    })
    .HtmlAttributes(new { style = "width: 100%;" }))